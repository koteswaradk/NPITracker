<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_functions_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <ImageButton
            android:id="@+id/d_function_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backselector1"
            android:layout_marginLeft="05dp"
            android:layout_gravity="center"
            android:contentDescription="back"/>
        <TextView
            android:id="@+id/d_text_title"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Function Details"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="right"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/d_home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/home"
                android:visibility="gone"
                android:contentDescription="back"
                android:layout_marginBottom="05dp"
                android:layout_marginTop="05dp"
                android:layout_marginRight="05dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">
        <TextView
            android:id="@+id/release_display"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            android:layout_height="wrap_content"
            android:text="Release : 17-1I201701061036cristina"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="1dp"
        android:layout_gravity="center"

        android:layout_below="@+id/linearLayout2"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="05dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="05dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Regression Phase:"
                        android:textSize="14dp"
                        android:textColor="@color/textcolor"
                        android:layout_height="wrap_content"
                        android:id="@+id/t_function"
                        android:layout_marginTop="05dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Execution"
                        android:textSize="14dp"
                        android:paddingLeft="05dp"
                        android:textColor="@color/textcolor"
                        android:layout_height="wrap_content"
                        android:id="@+id/t_function_display"
                        android:layout_marginTop="05dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_weight="1"

                        android:layout_marginTop="05dp"
                        android:layout_marginRight="05dp"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorlightgray" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="05dp"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_parameter">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Script Planned:"
                            android:textColor="@color/textcolor"
                            android:id="@+id/t_fixed"
                            />

                        <TextView
                            android:layout_marginLeft="05dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:text=""
                            android:id="@+id/t_planed_display" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/t_prs" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:text="Execution:"
                            android:id="@+id/t_infra" />

                        <TextView
                            android:layout_marginLeft="05dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/t_xecution_display" />
                    </LinearLayout>
                    <!-- -->

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="05dp"
                    android:layout_marginBottom="05dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"

                        android:visibility="visible"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:text="Total Script Executed:"
                            android:id="@+id/t_valid_rerun" />

                        <TextView
                            android:layout_marginLeft="05dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/textcolor"
                            android:id="@+id/t_total_sripts_executed_display" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"

                        android:visibility="visible"
                        android:layout_marginLeft="05dp"
                        android:layout_height="wrap_content">

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"

                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Run Pass:"
                            android:textColor="@color/textcolor"
                            android:id="@+id/t_firstrunpass_percetage"
                            android:layout_toLeftOf="@+id/t_firstrunpass_percetage_display"
                            android:layout_marginLeft="05dp" />

                        <TextView
                            android:paddingLeft="05dp"
                            android:layout_marginRight="05dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text=""
                            android:id="@+id/t_firstrunpass_percetage_display" />
                    </RelativeLayout>
                </LinearLayout>
                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <View
                         android:id="@+id/view1"
                         android:layout_width="match_parent"
                         android:layout_height="2dp"
                         android:background="@color/colorlightgray" />

                 </LinearLayout>-->

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="1dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true">
        <LinearLayout

            android:orientation="vertical"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="05dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="05dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Function:"
                    android:textSize="16dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_openprfunction"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="05dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="14dp"
                    android:paddingLeft="05dp"
                    android:textColor="@color/textcolor"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_openprfunction_display"
                    android:layout_marginTop="05dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorlightgray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="05dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="05dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Open Blocker PR details:"
                    android:textSize="16dp"

                    android:layout_height="wrap_content"
                    android:textColor="@color/j_aspiration"
                    android:id="@+id/t_openblockerprdetails"
                    android:layout_marginTop="05dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginTop="05dp"
                    android:layout_marginRight="05dp"
                    android:layout_height="wrap_content">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorlightgray" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/relsummary_linear_view_id"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="05dp"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_weight="0.27"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Number"/>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Arrival Date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="05dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="ReportedIn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="State "
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="ProLevl "
                    />
                <TextView
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Hit "
                    />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/layout_function_present"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <ListView

            android:layout_width="match_parent"
            android:id="@+id/list_function_details"
            android:layout_height="wrap_content"
            android:divider="@color/colorlightgray"

            android:headerDividersEnabled="true"
            >

        </ListView>
       <!-- android:dividerHeight="1dp"-->


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_no_content_display"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t_openblocker_invisible"
            android:text="No Open Blocker PR details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
