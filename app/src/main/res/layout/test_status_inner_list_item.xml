<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="#EEEEEE"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="02dp"
        android:layout_marginBottom="02dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="05dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="05dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_weight=".1"
                        android:layout_marginTop="05dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="10."
                            android:textSize="14dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/rli_index_number"
                            android:layout_marginTop="07dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_marginTop="05dp"
                        android:layout_marginRight="05dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="RLI ID:"
                            android:textSize="16dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/t_rli_id"
                            android:layout_marginTop="05dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="27769"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:paddingLeft="05dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/rli_id"
                            android:layout_marginTop="05dp" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="05dp"
                    android:layout_marginBottom="05dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/t_synopsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Synopsis:"
                        android:textStyle="bold"
                        android:paddingBottom="4sp"/>

                    <TextView
                        android:id="@+id/rli_synopsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Merge-fwd: TDF: IBM/TNF Analytics with LRF - LRF Module and Infrastructure"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reason_layout"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="05dp"
                    android:layout_marginBottom="05dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/t_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reason:"
                        android:textStyle="bold"
                        android:paddingBottom="4sp"/>

                    <TextView
                        android:id="@+id/rli_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Merge-fwd: TDF: IBM/TNF Analytics with LRF - LRF Module and Infrastructure"/>
                </LinearLayout>
                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <View
                         android:id="@+id/view1"
                         android:layout_width="match_parent"
                         android:layout_height="2dp"
                         android:background="@color/colorlightgray" />

                 </LinearLayout>-->

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
