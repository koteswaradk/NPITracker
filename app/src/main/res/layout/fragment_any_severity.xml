<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_subheading_grey"
    tools:context="com.juniper.npitracker.fragments.AnySeverityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="05dp"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Any Severity Summary"/>

                <LinearLayout
                    android:id="@+id/table_header_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/overall_text_padding"
                        android:layout_weight="0.30"
                        android:orientation="vertical"
                        android:background="@color/heading_bg_green">

                        <TextView
                            android:id="@+id/list_heading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="@string/group"
                            android:textColor="@color/black"
                            android:textSize="@dimen/npi_details_heading" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/overall_text_padding"
                        android:layout_weight="0.70"
                        android:orientation="vertical"
                        android:background="@color/heading_bg" >

                        <TextView
                            android:id="@+id/list_heading_value"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="@string/any_severity"
                            android:textColor="@color/black"
                            android:textSize="@dimen/npi_details_heading" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/overall_text_padding"
                                android:layout_weight="0.19"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="@string/open"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_column"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/overall_text_padding"
                                android:layout_weight="0.19"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="@string/verified"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_column"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/overall_text_padding"
                                android:layout_weight="0.21"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="@string/closed"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_column"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/overall_text_padding"
                                android:layout_weight="0.19"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="@string/total"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_column"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/overall_text_padding"
                                android:layout_weight="0.26"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="@string/last_7_days"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_column"/>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/table_header_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:id="@+id/pr_severity_summary_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>