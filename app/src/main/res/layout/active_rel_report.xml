                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorlightgray" />

            </LinearLayout>

            <LinearLayout

                style="@style/style_card_layout"
                android:id="@+id/linear_text_queued_debug_display"
