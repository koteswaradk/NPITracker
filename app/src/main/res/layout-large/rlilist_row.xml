<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="05dp"
        android:layout_marginLeft="05dp"
        android:layout_marginRight="05dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="05dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="05dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_marginTop="05dp"
                        android:layout_marginRight="05dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="RLI ID:"
                            android:textSize="20sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/t_rli_id"
                            android:layout_marginTop="05dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="27769"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:paddingLeft="05dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/t_rli_id_display"
                            android:layout_marginTop="05dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_weight="1"

                        android:layout_marginTop="05dp"
                        android:layout_marginRight="05dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/t_process_followed"
                            android:layout_width="wrap_content"
                            android:text="Process Followed:"
                            android:textSize="18sp"
                            android:textColor="@color/textcolor"
                            android:layout_height="wrap_content"
                            android:paddingLeft="02dp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:visibility="gone"

                            android:layout_height="wrap_content"
                            android:id="@+id/t_process_followed_diaplay"/>
                        <TextView
                            android:layout_width="20dp"
                            android:visibility="visible"
                            android:textSize="20sp"
                            android:layout_height="20dp"
                            android:id="@+id/image_process_followed_diaplay"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="05dp"
                    android:layout_marginBottom="05dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/t_synopsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Synopsis:"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingBottom="4sp"/>

                    <TextView
                        android:id="@+id/t_synopsis_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Merge-fwd: TDF: IBM/TNF Analytics with LRF - LRF Module and Infrastructure"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="05dp"
                    android:layout_marginBottom="05dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/t_npi_program"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NPI Program:"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingBottom="4sp"/>

                    <TextView
                        android:id="@+id/t_npi_program_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="SUMMIT"/>
                </LinearLayout>
                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <View
                         android:id="@+id/view1"
                         android:layout_width="match_parent"
                         android:layout_height="2dp"
                         android:background="@color/colorlightgray" />

                 </LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#f2f2f2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="05dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingLeft="02dp"
                            android:textSize="18sp"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:text="Executed:"
                            android:layout_height="wrap_content"
                            android:id="@+id/t_executed" />
                        <TextView
                            android:paddingLeft="02dp"
                            android:layout_width="wrap_content"
                            android:text="100%"
                            android:id="@+id/t_executed_display"
                            android:textSize="18sp"
                            android:textColor="@color/textcolor"
                            android:layout_height="wrap_content"
                            android:textStyle="normal|bold" />

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/colorlightgray"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_width="wrap_content"
                            android:text="Pass-rate:"
                            android:textSize="18sp"
                            android:textColor="@color/textcolor"
                            android:layout_height="wrap_content"
                            android:id="@+id/t_pass_rate" />
                        <TextView
                            android:paddingLeft="02dp"
                            android:layout_width="wrap_content"
                            android:text="100%"
                            android:textSize="18sp"
                            android:id="@+id/t_pass_rate_display"
                            android:textColor="@color/textcolor"
                            android:layout_height="wrap_content"
                            android:textStyle="normal|bold" />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/colorlightgray"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"

                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="05dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Scripted:"
                            android:textSize="18sp"
                            android:textColor="@color/textcolor"
                            android:layout_height="wrap_content"
                            android:paddingLeft="02dp"
                            android:id="@+id/t_scripted" />

                        <TextView
                            android:paddingLeft="05dp"
                            android:layout_width="wrap_content"
                            android:text="100%"
                            android:id="@+id/t_scripted_display"
                            android:textSize="18sp"
                            android:textColor="@color/textcolor"
                            android:layout_height="wrap_content"
                            android:textStyle="normal|bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>